<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Checkout Address Form -->
    <template id="checkout_recaptcha" inherit_id="website_sale.checkout_address">
        <xpath expr="//button[@name='submit']" position="before">
            <div class="form-group" t-if="request.website.recaptcha_site_key">
                <div class="g-recaptcha" t-att-data-sitekey="request.website.recaptcha_site_key"></div>
            </div>
        </xpath>
    </template>
</odoo>