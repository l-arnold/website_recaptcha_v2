<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- User Registration Form -->
        <template id="signup_recaptcha" inherit_id="auth_signup.signup_form">
            <xpath expr="//button[@type='submit']" position="before">
                <div class="form-group" t-if="request.website.recaptcha_site_key">
                    <div class="g-recaptcha" t-att-data-sitekey="request.website.recaptcha_site_key"></div>
                </div>
            </xpath>
        </template>

        <!-- Portal Registration Form (if using portal) -->
        <template id="portal_signup_recaptcha" inherit_id="portal.portal_signup">
            <xpath expr="//button[@type='submit']" position="before">
                <div class="form-group" t-if="request.website.recaptcha_site_key">
                    <div class="g-recaptcha" t-att-data-sitekey="request.website.recaptcha_site_key"></div>
                </div>
            </xpath>
        </template>
        
    </data>
</odoo>